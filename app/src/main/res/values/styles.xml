<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="word_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="button_add_top">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="featured_add_button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:background">@drawable/pill_button</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:paddingTop">15sp</item>
        <item name="android:paddingEnd">25sp</item>
        <item name="android:paddingBottom">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/button_add_top</item>
    </style>

    <style name="expand_filters_button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:background">@drawable/pill_button_filter</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingEnd">20sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/button_expand_filter</item>
    </style>

    <style name="layout_list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">#FFFBFB</item>
    </style>
</resources>
