<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/homeScreenTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/homescreentop_png"
            android:fontFamily="sans-serif"
            android:paddingTop="30dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#EDF4F6"
            android:textColorLink="#337BB5"
            android:textSize="@dimen/home_text_net_balance"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/homeScreenNetBalanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:text="@string/home_screen_net_balance"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/home_text_income_expense"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/homeScreenTotalExpense"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:textSize="@dimen/home_text_income_expense"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/homeScreenTotalIncome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/home_text_income_expense"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="450dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/addCategoryButton"
            style="@style/secondaryRoundedButton200dp"
            android:background="@drawable/pill_button_filter"
            android:drawableStart="@drawable/ic_add_black_24dp"
            android:drawablePadding="10sp"
            android:text="@string/addCategory" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="350dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/addTransactionButton"
            style="@style/primaryRoundedButton200dp"
            android:background="@drawable/pill_button"
            android:drawableStart="@drawable/ic_add_black_24dp"
            android:drawablePadding="10sp"
            android:text="@string/addTransaction" />
    </LinearLayout>

</RelativeLayout>