<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/homeScreenTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/homescreentop"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#EDF4F6"
            android:textColorLink="#337BB5"
            android:textSize="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="200dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/homeScreenTotalExpense"
            android:textSize="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/homeScreenTotalIncome"
            android:textSize="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            />

    </LinearLayout>

</RelativeLayout>